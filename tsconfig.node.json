{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "noEmit": true,
    "types": ["node", "vite/client"],
    "allowImportingTsExtensions": true
  },
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "postcss.config.*"
  ]
}