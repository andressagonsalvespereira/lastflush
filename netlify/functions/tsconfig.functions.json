{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmitOnError": true
  },
  "include": [
    "netlify/functions/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
